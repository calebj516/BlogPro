@using AspNetCore.ReCaptcha
@using Microsoft.AspNetCore.Localization
@using TheBlogProject.ViewModels
@model ContactMe

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
            <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
            <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
            <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->

            <form asp-action="Contact">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls form-floating">
                        <input asp-for="Name" type="text" id="name" class="form-control" placeholder="Name" required data-validation-required-message="Please enter your name.">
                        <label asp-for="Name" for="name"></label>               
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls form-floating">
                        <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Email Address" required data-validation-required-message="Please enter your email address.">
                        <label asp-for="Email" for="email"></label>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls form-floating">
                        <input asp-for="Phone" type="tel" id="phone" class="form-control" placeholder="Phone Number" required data-validation-required-message="Please enter your phone number.">
                        <label asp-for="Phone" for="phone"></label>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls form-floating">
                        <input asp-for="Subject" class="form-control" placeholder="Subject" required data-validation-required-message="Please enter your phone number.">
                        <label asp-for="Subject">Subject</label>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <textarea rows="5" class="form-control" id="summernote" asp-for="Message" required data-validation-required-message="Please enter a message."></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <button type="submit" class="col-12 btn btn-primary" id="sendMessageButton">Send</button>
                <div class="form-group">
                        <recaptcha />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function() {
            $('#summernote').summernote({
                placeholder: "Message"
            });
        });
    </script>



}