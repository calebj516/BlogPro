@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row d-flex justify-content-center">
    <div class="col-6">
        <form method="post">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating form-group">
                <input asp-for="Input.Email" id="email" class="form-control" type="email" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                <label asp-for="Input.Email" for="email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="col-12 btn btn-lg btn-primary mb-2">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
